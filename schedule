    <script>
        // Timezone conversion function
        function updateTimes(tz = Intl.DateTimeFormat().resolvedOptions().timeZone) {
            document.querySelectorAll('.session-item[data-utc]').forEach(function(item) {
                const utcTime = item.getAttribute('data-utc');
                const localTime = new Date(utcTime);
                const timeElement = item.querySelector('.local-time');
                
                timeElement.textContent = localTime.toLocaleString('en-US', { 
                    weekday: 'short', 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit', 
                    minute: '2-digit',
                    hour12: true, 
                    timeZone: tz
                });
            });
        }

        // Timezone selector
        const timezoneSelect = document.getElementById('timezone');
        timezoneSelect.addEventListener('change', () => {
            const tz = timezoneSelect.value || Intl.DateTimeFormat().resolvedOptions().timeZone;
            updateTimes(tz);
            
            // Show confirmation
            const selectedOption = timezoneSelect.options[timezoneSelect.selectedIndex];
            if (selectedOption.value) {
                console.log(`Timezone updated to: ${selectedOption.text}`);
            }
        });

        // Initialize with auto-detect
        document.addEventListener('DOMContentLoaded', function() {
            updateTimes();
            
            // Set initial select value
            const userTz = Intl.DateTimeFormat().resolvedOptions().timeZone;
            const matchingOption = Array.from(timezoneSelect.options).find(opt => 
                opt.value && userTz.includes(opt.value.split('/').pop())
            );
            if (matchingOption) {
                timezoneSelect.value = matchingOption.value;
            }
        });

        // Add hover effects
        document.querySelectorAll('.month-section').forEach(section => {
            section.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            section.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
